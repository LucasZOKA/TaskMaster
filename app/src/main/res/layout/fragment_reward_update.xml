<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RewardUpdateFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingRight="@dimen/_10sdp"
        android:paddingLeft="@dimen/_10sdp"
        android:background="@color/white"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recompensa"
            android:textSize="@dimen/_20ssp"
            android:gravity="center"/>

        <ImageView
            android:id="@+id/rewardImage"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_80sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_30sdp"/>

        <EditText
            android:id="@+id/ed_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="titulo"
            android:background="@color/background"
            android:layout_marginTop="@dimen/_50sdp"
            android:padding="@dimen/_5sdp"
            />
        <EditText
            android:id="@+id/ed_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="descricao"
            android:background="@color/background"
            android:layout_marginTop="@dimen/_10sdp"
            android:padding="@dimen/_5sdp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pontos"
            android:textSize="@dimen/_14ssp"
            android:layout_marginTop="@dimen/_10sdp"/>

        <EditText
            android:id="@+id/ed_points"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="100"
            android:background="@color/background"
            android:padding="@dimen/_5sdp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Grupo"
            android:textSize="@dimen/_14ssp"
            android:layout_marginTop="@dimen/_10sdp"/>

        <Spinner
            android:id="@+id/spin_Group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Imagem"
            android:background="@color/background"
            android:padding="@dimen/_5sdp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_10sdp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Recompensa permanente ?"
                android:textSize="@dimen/_14ssp"/>
            <CheckBox
                android:id="@+id/cbPermanent"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginStart="@dimen/_20sdp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Selecione uma cor"
                android:textSize="@dimen/_18sdp"/>

            <ImageView
                android:id="@+id/colorPicker_btn"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_gravity="center"
                android:layout_margin="@dimen/_15sdp"
                android:background="@color/blue_800"/>
        </LinearLayout>

        <Button
            android:id="@+id/btn_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Editar"
            android:layout_marginTop="@dimen/_10sdp"/>

        <Button
            android:id="@+id/btn_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Excluir"
            android:background="@color/transparente"
            android:backgroundTint="@color/transparente"
            android:textSize="@dimen/_14ssp"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:paddingLeft="@dimen/_30sdp"
            android:paddingRight="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_10sdp"/>

    </LinearLayout>

</FrameLayout>